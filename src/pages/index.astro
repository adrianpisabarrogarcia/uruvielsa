---
import Layout from "../layouts/Layout.astro";
import Menu from "../components/Menu.astro";
import Home from "../components/Home.astro";
//import Next from "../components/Next.astro";
import Animation from "../components/Animation.astro";
import Artwork from "../components/Artwork.astro";
import Contact from "../components/Contact.astro";
import Prefooter from "../components/Prefooter.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Nazareth's Portfolio">
  <header class="w-full md:fixed top-0 z-50">
    <Menu />
  </header>
  <main>
    <div class="w-full max-w-4xl mx-auto px-4 py-6">
      <Home />
      <!--<Next /> -->
      <Animation />
      <Artwork />
    </div>
    <Contact />
    <footer class="w-full max-w-4xl mx-auto px-4 py-6">
      <Prefooter />
      <Footer />
    </footer>
  </main>
</Layout>
